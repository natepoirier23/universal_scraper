{
  "item_selector": "article.product_pod",

  "fields": {
    "title": {
      "selector": "h3 a",
      "attr": "title"
    },
    "price": {
      "selector": ".price_color",
      "text": true
    },
    "rating": {
      "selector": "p.star-rating",
      "class_exclude": ["star-rating"]
    },
    "url": {
      "selector": "h3 a",
      "attr": "href",
      "absolute": true
    }
  },

  "detail_fields": {
    "upc": {
      "selector": "th:contains('UPC') + td",
      "text": true
    },
    "availability": {
      "selector": "table.table-striped tr:nth-child(6) td",
      "text": true
    },
    "product_type": {
      "selector": "table.table-striped tr:nth-child(2) td",
      "text": true
    },
    "description": {
      "selector": "#product_description ~ p",
      "text": true
    }
  },

  "pagination": {
    "selector": "li.next a",
    "attr": "href",
    "absolute": true
  }
}
